<%- include("template/cabecera", {tituloWeb: 'Mis publicaciones'}) %> <% var x =
(numPages/limit) + ""; var y = null; var z = null; if (x.includes('.')) { x =
Number(x.substr(0, 1)) + 1; } else { x = Number(x); } if(Number(value)-1 === 0){
y = 'd-none' } if(Number(value)+1 > x){ z = 'd-none' } %> <% if(data.length ===
0) {%>
<div class="row mb-5 mt-5">
  <h3 class="text-muted text-center mb-5 mt-5">
    No has posteado ningun empleo todavia.
  </h3>
</div>
<%} else {%>

<div class="container mt-4 mb-4">
  <h5 class="text-body text-right mb-5">Empleos que has posteado:</h5>

  <div class=" mb-0 p-0">
    <div class="row">
        <% for(let i = 0; i < data.length; i++){ %>
          <div class=" col-md-4 bg-white border rounded text-dark">
            <div class="col-md-12 p-3 " style="padding-top: 30px; padding-bottom: 30px">
              <div class="row mb-2 align-items-center">
                <div class="col-12 pl-0 pr-0 pb-2">
                  <a href="/myPostedEmploys/<%= Number(value) %>/<%= data[i].IDTrabajo %>"
                    class="h5 mr-3 p-0 text-decoration-none font-weight-normal text-dark"><%= data[i].Nombre %> |</a>
                </div>
                <div class="col-md-auto bg-primary text-white rounded mr-1 pl-1 pr-1 mb-1" style="height: 25px; width: auto">
                  <p class=""><%= data[i].TipoTrabajo %></p>
                </div>
                <div class="col-md-auto bg-secondary text-white rounded mr-1 pl-1 pr-1 mb-1" style="height: 25px; width: auto">
                  <p class=""><%= data[i].Tanda %></p>
                </div>
                <div class="col-md-auto bg-success text-white rounded pl-1 pr-1 mb-1" style="height: 25px; width: auto">
                  <p class=""><%= data[i].Modalidad %></p>
                </div>
              </div>
      
              <div class="row text-muted">
     
                <div class="col-md-12 p-0 mr-3">
                  <i class="fal fa-map-marker-alt text-dark font-weight-bold"></i> <%= data[i].Direccion %> -
                  <%= data[i].Provincia %>
                </div>
                <div class="col-md-12 p-0">
                  <i class="fal fa-clock text-dark font-weight-bold"></i> <%= data[i].FechaDePub %>
                </div>
              </div>
    
           
            </div>
      
          </div>

        <% } %>
      </div>
    </div>


  <div class="">
    <ul class="pagination pagination-lg justify-content-center pt-3">
      <li class="page-item <%- y %>">
        <a class="page-link" href="/myPostedEmploys/<%= Number(value)-1 %>" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Previous</span>
        </a>
      </li>
      <% for(let i = 0; i < x; i++){ %>
      <% if(Number(value) === i+1){ %>
      <li class="page-item active">
        <a class="page-link bg-dark" href="/myPostedEmploys/<%= i+1 %>"><%= i+1 %></a>
        <% } else{ %>
      <li class="page-item">
        <a class="page-link" href="/myPostedEmploys/<%= i+1 %>"><%= i+1 %></a>
        <% } %>
      </li>
      <% } %>

      <li class="page-item <%- z %>">
        <a class="page-link" href="/myPostedEmploys/<%= Number(value)+1 %>" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    </ul>
  </div>
</div>

<% } %>
<%- include("template/footer")%>
