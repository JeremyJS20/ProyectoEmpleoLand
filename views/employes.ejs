<%- include("template/cabecera", {tituloWeb: 'Empleos'}) %>

<div class="container mt-4 mb-4">

  <div class="row" id="">
    <% if(data.length === 0) { %>
    <h5 class="text-body text-center mt-5 mb-5 font-weight-normal"><%= noJobs %></h3>
    <% } else{ %> <% for(let i = 0; i < data.length; i++){ %>
    <div class="col-md-4">
      <div class="card mb-0 border rounded bg-white text-dark">
        <div class="card-body">
          <a href="/employes/<%=data[i].Categoria%>" class="card-text text-decoration-none text-dark"><%= data[i].Categoria %></a>
          <div class="card-text text-muted"><%= data[i].employsAmount  %> empleo/os publicados</div>
        </div>
      </div>
    </div>
    <% } %> <% } %>
  </div>

</div>


